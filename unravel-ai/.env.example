# Unravel AI Environment Configuration

# Application Settings
DEBUG=false
LOG_LEVEL=info
HOST=0.0.0.0
PORT=5000
SECRET_KEY=change_this_to_a_secure_secret_key

# Database Settings
DATABASE_URL=sqlite:///data/kaleidoscope.db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# LLM Settings
LLM_PROVIDER=openai
LLM_API_KEY=your_api_key_here
LLM_MODEL=gpt-3.5-turbo
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# Security Settings
ENABLE_CORS=true
ALLOWED_ORIGINS=*
JWT_SECRET=change_this_to_a_secure_jwt_secret
JWT_EXPIRY=3600

# Sandbox Settings
SANDBOX_ENABLED=true
SANDBOX_TIMEOUT=30
SANDBOX_WORKING_DIR=./sandbox
SANDBOX_MEMORY_LIMIT=512

# Graph Analysis Settings
GRAPH_ANALYZER_URL=http://localhost:8001
GRAPH_ANALYZER_TIMEOUT=60
